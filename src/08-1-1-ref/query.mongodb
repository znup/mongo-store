use("p_store");

db.stores.find({ storeId: "ST001" });
db.stores_details.find({ storeId: "ST001" });

db.stores.aggregate([
  {
    $lookup: {
      from: "stores_details",
      localField: "storeId",
      foreignField: "storeId",
      as: "detail",
    },
  },
  {
    $unwind: "$detail",
  },
]);
